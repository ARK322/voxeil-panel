{
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-undef": "error",
    "no-redeclare": "error",
    "no-unreachable": "error",
    "no-duplicate-imports": "error",
    "prefer-const": "warn",
    "no-var": "error"
  }
}
