# ============================
# Server Configuration
# ============================
NODE_ENV=production
PORT=8080
TRUST_PROXY=true
LOG_LEVEL=info

# ============================
# Security
# ============================
JWT_SECRET=change-me-min-32-chars-UpPeR-l0w3r-numb3r$-$p3c!@l-char$
JWT_EXPIRES_IN=12h
ALLOWED_ORIGINS=https://panel.example.com,https://admin.example.com

# ============================
# Request Limits
# ============================
REQUEST_BODY_LIMIT_BYTES=1048576
REQUEST_TIMEOUT_MS=30000
HEALTH_CHECK_TIMEOUT_MS=5000

# ============================
# Database
# ============================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_ADMIN_USER=postgres
POSTGRES_ADMIN_PASSWORD=your-secure-password
POSTGRES_DB=voxeil_panel

# ============================
# Database Pool
# ============================
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=10000
DB_STATEMENT_TIMEOUT=30000
DB_ADMIN_POOL_MAX=10
DB_ADMIN_POOL_MIN=1

# ============================
# Rate Limiting
# ============================
LOGIN_RATE_LIMIT=10
LOGIN_RATE_WINDOW_SECONDS=300
RATE_LIMIT_STORE=memory
RATE_LIMIT_PRUNE_INTERVAL_MS=60000
RATE_LIMIT_MAX_ENTRIES=10000
RATE_LIMIT_CLEANUP_INTERVAL_MS=300000

# ============================
# IP Allowlist
# ============================
ALLOWLIST_CACHE_TTL_MS=60000
ALLOWLIST_PATH=/etc/voxeil/allowlist.txt

# ============================
# Admin Bootstrap (optional)
# ============================
PANEL_ADMIN_USERNAME=admin
PANEL_ADMIN_PASSWORD=your-admin-password
PANEL_ADMIN_EMAIL=admin@example.com
